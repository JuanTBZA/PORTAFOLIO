        <!-- Línea vertical -->
        <div
          class="absolute left-4 md:left-8 w-1 bg-gray-600 h-full animate-draw-line"
        >
        </div>

        <!-- Nueva Experiencia 1 -->
        <div class="flex items-start mb-8">
          <!-- Punto en la línea -->
          <div
            class="absolute left-4 md:left-8 w-4 h-4 bg-blue-500 rounded-full z-10 -translate-x-1/2 mt-10"
