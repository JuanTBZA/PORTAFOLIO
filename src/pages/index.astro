  <!-- Sección de Contacto -->
  <section id="contact" class="py-16 bg-gray-900 text-center">
    <h2 class="text-4xl font-bold text-white mb-6 animate-fade-in">Contacto</h2>
    <p class="text-gray-300 mb-8 animate-fade-in">
      ¿Interesado en colaborar? ¡Escríbeme un mensaje!
    </p>

    <form
      action="https://formspree.io/f/mldglaja"
      method="POST"
      class="mt-8 max-w-lg mx-auto space-y-4 animate-fade-in-up"
    >
      <input
        required
        type="text"
        name="name"
        placeholder="Tu nombre"
        class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 text-white"
      />

      <input
        required
        type="email"
        name="email"
        placeholder="Tu correo"
        class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 text-white"
      />

      <textarea
        required
