---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <!-- Menú de navegación estilo glassmorphism -->
  <nav
    class="fixed top-0 left-0 right-0 z-50 flex justify-center items-center py-3"
  >
    <!-- Contenedor del menú (centrado y con bordes redondeados) -->
    <div
      class="flex space-x-1 bg-gray-900/50 backdrop-blur-md rounded-full p-1 border border-gray-700/50"
    >
      <a
        href="#about"
        class="px-4 py-2 text-gray-300 hover:text-white rounded-full transition-all duration-300 hover:bg-gray-800/30"
      >
        <span class="relative">
          <span
            class="absolute -bottom-1 left-0 w-0 h-px bg-blue-400 transition-all duration-300 group-hover:w-full"
          ></span>
          Sobre mí
        </span>
      </a>
      <a
        href="#experience"
        class="px-4 py-2 text-gray-300 hover:text-white rounded-full transition-all duration-300 hover:bg-gray-800/30"
      >
        <span class="relative">
          <span
            class="absolute -bottom-1 left-0 w-0 h-px bg-blue-400 transition-all duration-300 group-hover:w-full"
          ></span>
          Experiencia
        </span>
      </a>
      <a
        href="#projects"
        class="px-4 py-2 text-gray-300 hover:text-white rounded-full transition-all duration-300 hover:bg-gray-800/30"
      >
        <span class="relative">
          <span
            class="absolute -bottom-1 left-0 w-0 h-px bg-blue-400 transition-all duration-300 group-hover:w-full"
          ></span>
          Proyectos
        </span>
      </a>
      <a
        href="#contact"
        class="px-4 py-2 text-gray-300 hover:text-white rounded-full transition-all duration-300 hover:bg-gray-800/30"
      >
        <span class="relative">
          <span
            class="absolute -bottom-1 left-0 w-0 h-px bg-blue-400 transition-all duration-300 group-hover:w-full"
          ></span>
          Contacto
        </span>
      </a>
    </div>
  </nav>

  <!-- Sección Sobre Mí (ahora la primera sección) -->
  <section
    id="about"
    class="pt-24 pb-16 bg-gradient-to-b from-gray-900 to-gray-800 min-h-screen flex items-center"
  >
    <div class="max-w-6xl mx-auto px-6 md:px-12">
      <div
        class="flex flex-col md:flex-row items-center md:items-start space-y-8 md:space-y-0 md:space-x-12"
      >
        <!-- Foto de perfil con efecto vidrio -->
        <div class="flex flex-col items-center animate-fade-in-left">
          <div
            class="relative w-48 h-48 md:w-64 md:h-64 rounded-2xl overflow-hidden border border-gray-700/50 shadow-lg backdrop-blur-sm bg-gray-800/30 hover:scale-105 transition-transform mb-4"
          >
            <img
              src="/profile.jpg"
              alt="Foto de perfil"
              class="w-full h-full object-cover"
            />
          </div>
          <div class="mt-4 flex justify-center gap-4">
            <a
              target="_blank"
              href="https://www.linkedin.com/in/juan-tirado-boza/"
              class="px-4 py-2 bg-gray-800/50 hover:bg-gray-700/70 rounded-lg backdrop-blur-sm border border-gray-700/50 text-white transition-all flex items-center"
            >
              <i class="devicon-linkedin-plain mr-2"></i> LinkedIn
            </a>
            <a
              target="_blank"
              href="https://github.com/JuanTBZA/"
              class="px-4 py-2 bg-gray-800/50 hover:bg-gray-700/70 rounded-lg backdrop-blur-sm border border-gray-700/50 text-white transition-all flex items-center"
            >
              <i class="devicon-github-original mr-2"></i> GitHub
            </a>
          </div>
        </div>

        <!-- Descripción con efecto vidrio -->
        <div class="flex-1 animate-fade-in-right">
          <div
            class="bg-gray-800/30 backdrop-blur-sm p-8 rounded-2xl border border-gray-700/50 shadow-lg"
          >
            <h2 class="text-4xl font-bold text-white mb-6">Juan Tirado</h2>
            <p class="text-lg text-gray-300 leading-relaxed mb-6">
              Desarrollador especializado en <span
                class="text-blue-400 font-medium"
                >Backend y Desarrollo mobile</span
              >. Habilidades en <span class="text-blue-400 font-medium"
                >resolución de problemas, trabajo en equipo, adaptabilidad,
                gestión del tiempo y pensamiento crítico</span
              >.
            </p>

            <div class="mt-8">
              <h3 class="text-2xl font-semibold text-white mb-6">
                Tecnologías principales
              </h3>
              <div class="grid grid-cols-4 md:grid-cols-6 gap-4">
                <!-- Backend -->
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-laravel-plain text-3xl text-red-500"></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-php-plain text-3xl text-indigo-400"></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-java-plain text-3xl text-orange-400"></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-spring-plain text-3xl text-green-400"></i>
                </div>

                <!-- Frontend -->
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-angular-plain text-3xl text-red-500"></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-typescript-plain text-3xl text-blue-500"
                  ></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-javascript-plain text-3xl text-yellow-400"
                  ></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-html5-plain text-3xl text-orange-500"></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-css3-plain text-3xl text-blue-400"></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-tailwindcss-plain text-3xl text-teal-400"
                  ></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-flutter-plain text-3xl text-blue-300"></i>
                </div>

                <!-- Bases de Datos -->
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-mysql-plain text-3xl text-blue-400"></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-postgresql-plain text-3xl text-blue-400"
                  ></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-mongodb-plain text-3xl text-green-500"></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i
                    class="devicon-microsoftsqlserver-plain text-3xl text-red-400"
                  ></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-oracle-original text-3xl text-red-500"></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-mariadb-plain text-3xl text-blue-400"></i>
                </div>
                <div
                  class="flex justify-center items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700/50 shadow hover:bg-gray-700/70 transition"
                >
                  <i class="devicon-sqlite-plain text-3xl text-blue-400"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de Experiencia Laboral -->
  <section id="experience" class="py-16 bg-gray-800">
    <div class="max-w-6xl mx-auto px-6 md:px-12">
      <h2
        class="text-4xl font-bold text-white text-center mb-12 animate-fade-in"
      >
        Experiencia Laboral
      </h2>

      <!-- Contenedor de la línea de tiempo -->
      <div class="relative">
        <!-- Línea vertical -->
        <div
          class="absolute left-4 md:left-8 w-1 bg-gray-600 h-full animate-draw-line"
        >
        </div>

        <!-- Experiencia 1 -->
        <div class="flex items-start mb-8">
          <!-- Punto en la línea -->
          <div
            class="absolute left-4 md:left-8 w-4 h-4 bg-blue-500 rounded-full z-10 -translate-x-1/2 mt-10"
          >
          </div>
          <!-- Carta de experiencia -->
          <div
            class="ml-12 md:ml-16 w-full px-6 py-8 bg-gray-700 rounded-lg shadow-lg hover:shadow-2xl transition duration-300 transform hover:scale-95"
          >
            <h3 class="text-2xl font-semibold text-white">
              Desarrollador Backend
            </h3>
            <p class="text-gray-300">Devdatep Consulting</p>
            <p class="text-gray-400 text-sm">Noviembre 2024 - Presente</p>
            <div class="text-gray-300 mt-4">
              <ul class="list-disc pl-5">
                <li>
                  Desarrollo de APIs RESTful utilizando Laravel para integrar
                  funcionalidades en aplicaciones web.
                </li>
                <li>
                  Diseño e implementación de lógica de negocio y conexiones con
                  bases de datos MySQL.
                </li>
                <li>
                  Colaboración con equipos frontend y base de datos para
                  asegurar una integración eficiente y funcional.
                </li>
              </ul>
            </div>
            <div class="mt-4">
              <span class="text-sm text-gray-400">Tecnologías:</span>
              <div class="flex flex-wrap gap-2 mt-2">
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >Laravel</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >PHP</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >MySQL</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >Git</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >Github</span
                >
              </div>
            </div>
          </div>
        </div>

        <!-- Experiencia 2 -->
        <div class="flex items-start mb-8">
          <!-- Punto en la línea -->
          <div
            class="absolute left-4 md:left-8 w-4 h-4 bg-blue-500 rounded-full z-10 -translate-x-1/2 mt-10"
          >
          </div>
          <!-- Carta de experiencia -->
          <div
            class="ml-12 md:ml-16 w-full px-6 py-8 bg-gray-700 rounded-lg shadow-lg hover:shadow-2xl transition duration-300 transform hover:scale-95"
          >
            <h3 class="text-2xl font-semibold text-white">
              Desarrollador Móvil
            </h3>
            <p class="text-gray-300">Canatiy Studios</p>
            <p class="text-gray-400 text-sm">Noviembre 2023 - Noviembre 2024</p>
            <div class="text-gray-300 mt-4">
              <ul class="list-disc pl-5">
                <li>
                  Diseño y desarrollo de aplicaciones móviles utilizando
                  Flutter, optimizadas para dispositivos Android.
                </li>
                <li>
                  Implementación de interfaces de usuario diseñadas previamente
                  en Figma, garantizando una experiencia intuitiva.
                </li>
                <li>
                  Manejo del ciclo completo de desarrollo móvil, incluyendo
                  pruebas y despliegue.
                </li>
              </ul>
            </div>
            <div class="mt-4">
              <span class="text-sm text-gray-400">Tecnologías:</span>
              <div class="flex flex-wrap gap-2 mt-2">
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >Flutter</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >Firebase</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >Dart</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >SQLite</span
                >
              </div>
            </div>
          </div>
        </div>

        <!-- Experiencia 3 -->
        <div class="flex items-start mb-8">
          <!-- Punto en la línea -->
          <div
            class="absolute left-4 md:left-8 w-4 h-4 bg-blue-500 rounded-full z-10 -translate-x-1/2 mt-10"
          >
          </div>
          <!-- Carta de experiencia -->
          <div
            class="ml-12 md:ml-16 w-full px-6 py-8 bg-gray-700 rounded-lg shadow-lg hover:shadow-2xl transition duration-300 transform hover:scale-95"
          >
            <h3 class="text-2xl font-semibold text-white">
              Desarrollador Full-Stack Junior
            </h3>
            <p class="text-gray-300">Freelance</p>
            <p class="text-gray-400 text-sm">Octubre 2022 - Noviembre 2023</p>
            <div class="text-gray-300 mt-4">
              <ul class="list-disc pl-5">
                <li>
                  Desarrollo de aplicaciones web utilizando Java, Spring Boot,
                  PHP, Laravel, JavaScript, HTML y CSS.
                </li>
                <li>
                  Creación de páginas web desde cero, integrando bases de datos
                  MySQL y funcionalidades avanzadas.
                </li>
                <li>
                  Diseño y desarrollo back-end con Java para garantizar
                  experiencias de usuario eficientes y fluidas
                </li>
              </ul>
            </div>
            <div class="mt-4">
              <span class="text-sm text-gray-400">Tecnologías:</span>
              <div class="flex flex-wrap gap-2 mt-2">
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >Java</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >Spring</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >PHP</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >Laravel</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >HTML</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >CSS</span
                >
                <span
                  class="px-3 py-1 bg-gray-600 text-gray-300 rounded-full text-sm"
                  >JavaScript</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de Proyectos -->
  <section id="projects" class="py-16 bg-gray-800">
    <h2 class="text-4xl font-bold text-center text-white mb-8 animate-fade-in">
      Proyectos
    </h2>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto px-6 md:px-12"
    >
      <!-- Tarjeta 1 -->
      <div
        class="bg-gray-700 shadow-lg rounded-lg overflow-hidden transition-transform transform hover:scale-105 hover:shadow-2xl animate-fade-in-up"
      >
        <img
          src="/app1.png"
          alt="Proyecto 1"
          class="w-full h-48 object-cover"
        />
        <div class="p-6 flex flex-col items-center">
          <h3 class="text-xl font-semibold text-white">Biblia de fe</h3>
          <p class="text-gray-300 mt-2 text-center">
            Biblia Reina Valera edición 1960
          </p>
          <a
            target="_blank"
            href="https://play.google.com/store/apps/details?id=com.canatiystudios.bibliadefe&hl=es_NI"
            class="mt-4 inline-block px-6 py-2 text-sm font-semibold text-white bg-blue-500 hover:bg-blue-600 rounded-full shadow-md transition-transform transform hover:scale-105"
          >
            Ver más
          </a>
        </div>
      </div>

      <!-- Tarjeta 2 -->
      <div
